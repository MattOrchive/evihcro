<!-- SIGN UP -->
<style type="text/css">
	#box {
		background: url('/images/join_box.png') no-repeat;
		background-position:0 38px;
		width:827px;
		height:550px;
		margin:0 0 0 60px;
	}
	#boxContent {
		padding:44px 5px 0 20px;
	}
	#boxContent h1 {
		padding:0px 0 22px 80px;
	}
	#boxContent h2 {
		padding:50px 0 10px 100px;
	}
	
	#boxContent div {
		margin-right:45px;
		margin-bottom:27px;
	}
	#boxContent #name {
		margin-bottom:25px;
	}
	#boxContent #email {
		margin-bottom:25px;
	}
	#boxContent div img {
		position:relative;
		top:5px;
	}
	#boxContent P {
		padding:0 85px 0 0;
	}
	
	#boxContent .betaTextField {
		width:491px;
		height:27px;
	}
	#boxContent .button {
		width:90px;
		height:29px;
		margin:0 160px 0 222px;
	}
	
	#boxContent div.field_with_errors {
		display:inline;
		margin-right:0;
	}
</style>

<div id="box">
	<div id="boxContent">

		<h2>Create your account</h2>		
		<h1>Become a beta tester</h1>
		
		<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do 	|f| %>
			<div>
				<%= f.label :beta_code, 'Beta Code', :class=>'inline betaLabelTextField' %>
				<%= f.text_field :beta_code, :class=>'betaTextField' %>
				<%= errorImage(@user, :beta_code)%>
			</div>

			<div id="name">
				<%= f.label :name, :class=>'inline betaLabelTextField' %>
				<%= f.text_field :name, :class=>'betaTextField' %>
				<%= errorImage(@user, :name)%>
			</div>

			<div id="email">
				<%= f.label :email, "Email Address", :class=>'inline betaLabelTextField' %>
				<%= f.text_field :email, :class=>'betaTextField' %>
				<%= errorImage(@user, :email)%>
			</div>

			<div>
				<%= f.label :password, :class=>'inline betaLabelTextField' %>
				<%= f.password_field :password, :class=>'betaTextField' %>
				<%= errorImage(@user, :password)%>
			</div>

			<div>
				<%= f.label :password_confirmation, "Re-Enter Password", :class=>'inline betaLabelTextField' %>
				<%=f.password_field :password_confirmation,:class=>'betaTextField'%>
				<%= errorImage(@user, :password_confirmation)%>
			</div>
			
			<%= f.submit 'submit', :class=>'button floatLeft'%>
		
			<p class="">Already a member? <%=link_to('Sign In here', '/login')%></p>
			<p class=''></p>
		<% end %>
	</div>
</div>